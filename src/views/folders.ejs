<%- include('./partials/header.ejs')%>
    <main>
        <h2>Hey, <%= currentUser.firstName + ' ' + currentUser.lastName %>
        </h2>
        <div class="container">
            <%- include('./partials/contents-nav.ejs') %>
                <table class="contents-table">
                    <thead>
                        <tr>
                            <th>Folder name</th>
                            <th>Uploaded on</th>
                            <th>Last modified</th>
                            <th>Files count</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% locals.folders.forEach((folder)=> { %>
                            <tr>
                                <td>
                                    <%= folder.name %>
                                </td>
                                <td>
                                    <%= folder.createdAt %>
                                </td>
                                <td>
                                    <%= folder.updatedAt %>
                                </td>
                                <td>
                                    # for now
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
        </div>
    </main>
    <%- include('./partials/footer.ejs')%>